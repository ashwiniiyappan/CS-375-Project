<!DOCTYPE html>
<html>
<head>
  <style>
      body {
          font-family: Arial, sans-serif;
          background-color: #f0f0f0;
          margin: 0;
          padding: 0;
      }

      header {
          background-color: #333;
          color: white;
          padding: 10px;
          text-align: center;
      }

      #userContent {
          margin: 20px;
          padding: 20px;
          background-color: white;
          border-radius: 8px;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      #userContent div {
          margin-bottom: 20px;
      }

      #userContent hr {
          border: 1px solid #ddd;
          margin: 10px 0;
      }

      #Upload {
          background-color: #4CAF50;
          color: white;
          padding: 10px 20px;
          text-decoration: none;
          border: none;
          border-radius: 5px;
          cursor: pointer;
      }

      #homeButton {
          background-color: #333;
          color: white;
          padding: 10px 20px;
          text-decoration: none;
          border: none;
          border-radius: 5px;
          cursor: pointer;
          margin-top: 20px;
      }
  </style>
</head>

<body>
    <a href="upload_content.html">
        <button id="Upload">
            Upload New Post
        </button>
    </a>
    <a href="/">
      <button id="homeButton">
          Home
      </button>
    </a>
    <a href="/watch_history">
        <button id = "history">
            Watch History
        </button>
    </a>

  <div id="userPlaylists">
    <h2>User Playlists</h2>

    <% for (let playlist of playlists) { %>
    <div>
      <h3>
        <%= playlist.title %>
      </h3>
      <p>
        Playlist ID: <%= playlist.playlist_id %>
      </p>
      <a href="/playlist/"
        <%= playlist.playlist_id %>">
        <button>View Playlist</button>
      </a>
    </div>
    <hr>
      <% } %>
  </div>

    <section id="myContent">
      <h2>My Content</h2>
      
        <% for (let content of contentList) { %>
            <div>
              <a href ="/content_view?content_id=<%= content.content_id %>">
                <button id ="content_link">View Page</button>
              </a>
                <p>Content ID: <%= content.content_id %></p>
  <p>
    Username: <%= content.username %>
  </p>
                <p>Content Type: <%= content.content_type %></p>
                <p>View Count: <%= content.view_count %></p>
                <p>Likes: <%= content.likes %></p>
                <p>Dislikes: <%= content.dislikes %></p>

                <% if (content.content_type === 'image') { %>
                    <!-- Display image -->
                    <img src="<%= content.content_path %>" alt="Content Image" width="300">
                <% } else if (content.content_type === 'video') { %>
                    <!-- Display video -->
                    <video width="300" controls>
                        <source src="<%= content.content_path %>" type="video/mp4">
                        <source src="<%= content.content_path %>" type="video/webm">
                        <source src="<%= content.content_path %>" type="video/quicktime">
                        Your browser does not support the video tag.
                    </video>
                <% } %>
                <div class="content-title"><%= content.title %></div>

            </div>
            <hr>
        <% } %>
    </section>
</body>
</html>
